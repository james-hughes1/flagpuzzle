<!-- Boilerplate Header Section -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Flag Puzzle Game</title>
</head>

<body>
  <h1><%= username %>, you have: <span class="score">0</span> points.</h1>
  <!-- Game Area -->
  <div id="gameContainer">
    <!-- blockGrid takes 70% of the space -->
    <div id="visualArea">
      <div id="blockGrid" data-rows="15" data-columns="12"></div>
      <div id="powerGrid">
        <div id="power1" class="powerSlot" data-number="0">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 1">
        </div>
        <div id="power2" class="powerSlot" data-number="1">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 2">
        </div>
        <div id="power3" class="powerSlot" data-number="2">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 3">
        </div>
      </div>
    </div>
    <!-- On the right there are the other controls -->
    <div id="controls">
      <div class="image-container">
        <img id="flagImg" src="/assets/flags/us.svg" alt="Flag">
        <img id="tick" src="assets/tick2.png" alt="Tick">
      </div>
      <input type="text" id="answerInput" placeholder="Type your answer here">
      
      <!-- Virtual Keyboard -->
      <div id="keyboard" class="keyboard">
        <button class="key" data-key="q">Q</button>
        <button class="key" data-key="w">W</button>
        <button class="key" data-key="e">E</button>
        <button class="key" data-key="r">R</button>
        <button class="key" data-key="t">T</button>
        <button class="key" data-key="y">Y</button>
        <button class="key" data-key="u">U</button>
        <button class="key" data-key="i">I</button>
        <button class="key" data-key="o">O</button>
        <button class="key" data-key="p">P</button>
        <button class="key" data-key="a">A</button>
        <button class="key" data-key="s">S</button>
        <button class="key" data-key="d">D</button>
        <button class="key" data-key="f">F</button>
        <button class="key" data-key="g">G</button>
        <button class="key" data-key="h">H</button>
        <button class="key" data-key="j">J</button>
        <button class="key" data-key="k">K</button>
        <button class="key" data-key="l">L</button>
        <button class="key" data-key="z">Z</button>
        <button class="key" data-key="x">X</button>
        <button class="key" data-key="c">C</button>
        <button class="key" data-key="v">V</button>
        <button class="key" data-key="b">B</button>
        <button class="key" data-key="n">N</button>
        <button class="key" data-key="m">M</button>

        <button class="specialKey" id="space">_</button>
        <button class="specialKey" id="backspace">&lt;</button>
        <button class="specialKey" id="clear">&lt;&lt;</button>
    </div>

      <button id="enterBtn">Enter</button>
      <button id="pauseBtn">Pause</button>
    </div>
  </div>

  <!-- Pop Up Menus -->
  <div id="pauseMenu">
    <p>Paused</p>
    <button id="resumeBtn">Resume</button>
  </div>
  <div id="endMenu">
    <p><%= username %>, you got an incredible <span class="score">0</span> points.</p>
    <form action="/about" method="GET">
      <button type="submit">Play Again</button>
    </form>
  </div>
  <div id="hintMenu">
    <div class="image-container">
      <img id="hintImg" src="/assets/flags/us.svg" alt="Flag">
    </div>
    <p id="hintCountry">USA</p>
  </div>
  <script src="/app.js" defer></script>
</body>
</html>
