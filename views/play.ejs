<!-- Boilerplate Header Section -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/keyboard.css">
  <link rel="stylesheet" href="/styles/game.css">
  <link rel="stylesheet" href="/styles/popups.css">
  <title>Flag Puzzle Game</title>
</head>

<body>
  <h1><%= username %>, you have: <span class="score">0</span> points.</h1>
  <!-- Game Area -->
  <div id="gameContainer">
    <!-- blockGrid takes 70% of the space -->
    <div id="visualArea">
      <!-- numRows, numCols set here -->
      <div id="blockGrid" data-rows="15" data-columns="12"></div>
      <div id="powerGrid">
        <div id="power1" class="powerSlot" data-number="0">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 1">
        </div>
        <div id="power2" class="powerSlot" data-number="1">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 2">
        </div>
        <div id="power3" class="powerSlot" data-number="2">
          <img id="powerImg1" class="powerImg" src="/assets/rain.png" alt="Power 3">
        </div>
      </div>
    </div>
    <!-- On the right there are the other controls -->
    <div id="controls">
      <div class="image-container">
        <img id="flagImg" src="/assets/flags/us.svg" alt="Flag">
        <img id="tick" src="assets/tick2.png" alt="Tick">
      </div>
      
      <!-- Virtual Keyboard -->
      <!-- Virtual Keyboard -->
      <div id="keyboard" class="keyboard"></div>
      <script type="module">
        import { createKeyboard, setupKeyboard } from '/js/virtual_keyboard.js';
        createKeyboard('#keyboard');
        setupKeyboard('#keyboard', '#answerInput');
      </script>
      <div id="input-container">
        <input type="text" id="answerInput" placeholder="Type your answer here">
        <button id="enterBtn">Enter</button>
        <button id="pauseBtn">Pause</button>
      </div>
    </div>
  </div>

  <!-- Pop Up Menus -->
  <div id="pauseMenu">
    <p>Paused</p>
    <section id="leaderboard">
    <h2>Leaderboard</h2>
    <ul>
      <% scores.forEach(s => { %>
        <li><%= s.username %> — <%= s.score %></li>
      <% }) %>
    </ul>
    </section>
    <button id="resumeBtn">Resume</button>
  </div>
  <div id="endMenu">
    <p><%= username %>, you got an incredible <span class="score">0</span> points. You will be added to the existing leaderboard...</p>
    <section id="leaderboard">
    <h2>Leaderboard</h2>
    <ul>
      <% scores.forEach(s => { %>
        <li><%= s.username %> — <%= s.score %></li>
      <% }) %>
    </ul>
    </section>
    <form action="/about" method="GET">
      <button type="submit">Play Again</button>
    </form>
  </div>
  <div id="hintMenu">
    <div class="image-container">
      <img id="hintImg" src="/assets/flags/us.svg" alt="Flag">
    </div>
    <p id="hintCountry">USA</p>
  </div>
  <script>
    window.USERNAME = "<%= username %>";
  </script>
  <script type="module" src="/js/app.js" defer></script>
</body>
</html>
