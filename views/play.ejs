<!-- Boilerplate Header Section -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Flag Puzzle Game</title>
</head>

<body>
  <h1><%= username %>, you have: <span class="score">0</span> points.</h1>
  <!-- Game Area -->
  <div id="gameContainer">
    <!-- blockGrid takes 70% of the space -->
    <div id="blockGrid" data-rows="15" data-columns="12"></div>
    <!-- On the right there are the other controls -->
    <div id="controls">
      <div class="image-container">
        <img id="flagImg" src="/assets/flags/us.svg" alt="Flag">
        <img id="tick" src="assets/tick.png" alt="Tick">
      </div>
      <label for="answerInput">Answer: </label>
      <input type="text" id="answerInput" placeholder="Type your answer here">
      <button id="enterBtn">Enter</button>
      <button id="pauseBtn">Pause</button>
    </div>
  </div>

  <!-- Pop Up Menus -->
  <div id="pauseMenu">
    <p>Paused</p>
    <button id="resumeBtn">Resume</button>
  </div>
  <div id="endMenu">
    <p><%= username %>, you got an incredible <span class="score">0</span> points.</p>
    <form action="/about" method="GET">
      <button type="submit">Play Again</button>
    </form>
  </div>
  <div id="hintMenu">
    <div class="image-container">
      <img id="hintImg" src="/assets/flags/us.svg" alt="Flag">
    </div>
    <p id="hintCountry">USA</p>
  </div>
  <script src="/app.js" defer></script>
</body>
</html>
